<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.qiuyi.cookingbootcamp.EditUserPage"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <ImageView
            android:src="@drawable/edit_user_information"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.39"
            />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/changebutton"
                android:background="@drawable/recipe_image_create_icon"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="150dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"

                />

            <Button
                android:id="@+id/fromFolderEdit"
                android:background="@drawable/recipe_image_upload_icon"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="130dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/changebutton"
                android:layout_centerHorizontal="true"

                />
        </RelativeLayout>

        <EditText
            android:id="@+id/oldpasswordedit"
            android:hint="Enter the old password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:background="@drawable/shape1"
            android:typeface="normal"
            android:textAllCaps="false"

            />

        <EditText
            android:id="@+id/newpasswordedit"
            android:hint="Enter new password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:background="@drawable/shape1"
            android:textAllCaps="false"
            android:typeface="normal"
            />
        <EditText
            android:id="@+id/comfirmpasswordedit"
            android:hint="Confirm new password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:background="@drawable/shape1"
            android:textAllCaps="false"
            android:typeface="normal"

            />

        <EditText
            android:id="@+id/emailedit"
            android:hint="@string/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:background="@drawable/shape1"
            android:textAllCaps="false"
            />



        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@drawable/shape"
            android:layout_marginTop="40dp"

            />


    </LinearLayout>

</RelativeLayout>

