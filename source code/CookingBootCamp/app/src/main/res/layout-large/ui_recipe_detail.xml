<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.qiuyi.cookingbootcamp.RecipeDetailPage"
    >

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="bottom|center_horizontal"
            >



            <ImageView
                android:id="@+id/recipepicture"
                android:src="@drawable/ic_launcher"
                android:layout_height="150dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="30dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/recipeID2"
                    android:text="Recipe id:1000"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:gravity="center"


                    />
                <Button
                    android:id="@+id/addtocollection"
                    android:text="@string/add2collections"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="right"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/recipeID2"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/shape2"
                    android:textAllCaps="false"

                    />
                <ImageView
                    android:id="@+id/like"
                    android:src="@drawable/iconfont_like"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/addtocollection"
                    android:layout_marginLeft="90dp"
                    android:textAllCaps="false"
                    android:background="@color/background_color"

                    />

                <TextView

                    android:layout_marginTop="0dp"
                    android:layout_gravity="right"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/like"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:id="@+id/likeNumber2"
                    android:text="2"
                    android:ems="2"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:background="@color/background_color"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/recipeinformation"
                android:text="@string/recipeinfo"

                android:layout_height="wrap_content"
                android:layout_width="match_parent"

                android:layout_marginTop="20dp"
                android:textSize="40dp"
                android:textColor="@color/black"

                android:typeface="serif"
                android:textAllCaps="false"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/author"
                android:text="@string/author"

                android:layout_height="40dp"
                android:layout_width="match_parent"

                android:layout_marginTop="0dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:typeface="normal"
                android:textAllCaps="true"
                android:background="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGREDIENTS"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:typeface="serif"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/material"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:hint="@string/recipeinfodesc"
                android:enabled="false"
                android:typeface="normal"
                android:textAllCaps="false"
                android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREPARATION"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:typeface="serif"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/steps"
                android:layout_height="150dp"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:hint="@string/recipeinfosteps"
                android:typeface="normal"
                android:textAllCaps="false"
                android:background="@color/white"
                />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
