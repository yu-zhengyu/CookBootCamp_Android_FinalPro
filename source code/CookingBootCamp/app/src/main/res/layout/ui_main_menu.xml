<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:label="Cooking Boot Camp"
    tools:context="com.example.qiuyi.cookingbootcamp.MainMenuPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

    <Button
        android:id="@+id/weeklytop10"
        android:text="@string/weeklttop10recipe"

        android:textSize="20dp"
        android:textColor="@color/black"
        android:typeface="normal"
        android:textAllCaps="false"

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="left"
        android:layout_marginTop="5dp"

        android:background="@drawable/shape3"

        android:drawableLeft="@drawable/local_recipes_icon"

        android:drawableRight="@drawable/to_right_icon"
        />

    <Button
        android:id="@+id/cookstar"
        android:text="@string/weeklttop10cook"

        android:textSize="20dp"
        android:textColor="@color/black"
        android:typeface="normal"
        android:textAllCaps="false"

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="left"
        android:layout_marginTop="15dp"

        android:background="@drawable/shape4"

        android:drawableLeft="@drawable/local_cooks_icon"

        android:drawableRight="@drawable/to_right_icon"
        android:layout_toEndOf="@id/localrecipesbutton"
        />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/bottomlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/tabTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B6B6B6" />



        <LinearLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabTop"
            android:layout_marginTop="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/weixinLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/weixinImageView"
                    android:layout_width="96px"
                    android:layout_height="84px"
                    android:layout_gravity="top|center"
                    android:src="@drawable/unselected_main" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/contractLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/contractImageView"
                    android:layout_width="96px"
                    android:layout_height="84px"
                    android:layout_gravity="top|center"
                    android:src="@drawable/unselected_upload" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/findLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/findImageView"
                    android:layout_width="96px"
                    android:layout_height="84px"
                    android:layout_gravity="top|center"
                    android:src="@drawable/unselected_community" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/meLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/meImageView"
                    android:layout_width="96px"
                    android:layout_height="84px"
                    android:layout_gravity="top|center"
                    android:src="@drawable/unselected_me" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>






</RelativeLayout>
