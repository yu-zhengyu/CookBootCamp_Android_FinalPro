<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.qiuyi.cookingbootcamp.UploadProfilePhotoPage"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/cookingbootcamp"
            android:layout_weight="0.39" />

        <TextView

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Upload your image here"
            android:textSize="20dp"
            android:typeface="serif"
            android:textColor="@color/black"
            android:gravity="center"/>





        <Button
            android:id="@+id/takephoto"
            android:text="@string/takephoto"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="120dp"
            android:textColor="@color/white"
            android:background="@drawable/shape"
            android:typeface="normal"
            android:textAllCaps="false"

            />

        <Button
            android:id="@+id/fromimagefolder"
            android:text="@string/fromimagefolder"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"
            android:background="@drawable/shape"
            android:typeface="normal"
            android:textAllCaps="false"
            />
    </LinearLayout>


</RelativeLayout>
